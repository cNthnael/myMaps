<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment.ProfileFragment">


    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160mdp"
        android:elevation="@dimen/_10mdp"
        android:gravity="center"
        android:background="#2D2D2D">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_gravity="center"
            android:elevation="@dimen/_20mdp"
            android:layout_marginLeft="@dimen/_25mdp"
            android:src="@drawable/profile"
            app:civ_border_color="#FFFFFF"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10mdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nathanael"
                android:textSize="@dimen/_18font_mdp"
                android:textColor="@color/white"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="carlo.djobo@binus.ac.id"
                android:textColor="#858383"
                android:textSize="@dimen/_12font_mdp"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linear"
        android:layout_marginStart="@dimen/_10mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:layout_marginEnd="@dimen/_10mdp"
        android:layout_marginBottom="@dimen/_10mdp"
        android:orientation="vertical">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/uploadLocation"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40mdp"
            android:layout_margin="@dimen/_5mdp"
            android:clickable="true"
            android:elevation="@dimen/_2mdp"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5mdp"
            app:cardElevation="@dimen/_2mdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:background="@color/white"
                android:padding="@dimen/_5mdp">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/upload_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:layout_toEndOf="@+id/icon1"
                    android:includeFontPadding="false"
                    android:text="Upload Location"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16font_mdp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40mdp"
            android:layout_margin="@dimen/_5mdp"
            android:clickable="true"
            android:elevation="@dimen/_2mdp"
            android:focusable="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="@dimen/_5mdp"
            app:cardElevation="@dimen/_2mdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5mdp"
                android:layout_marginTop="@dimen/_5mdp"
                android:background="@color/white"
                android:padding="@dimen/_5mdp">

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="@dimen/_20mdp"
                    android:layout_height="@dimen/_20mdp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/logout_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/_10mdp"
                    android:layout_toEndOf="@+id/icon2"
                    android:includeFontPadding="false"
                    android:text="Log Out"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16font_mdp"
                    android:textStyle="bold" />


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>



</RelativeLayout>